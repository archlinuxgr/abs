## arg 1:  the new package version
post_install() {
  xdg-desktop-menu forceupdate --mode system
  xdg-icon-resource forceupdate --theme hicolor
}

## arg 1:  the new package version
## arg 2:  the old package version
post_upgrade() {
  post_install
}

## arg 1:  the old package version
post_remove() {
  post_install
}

