# Current i686 Maintainer: ifaigios <ifaigios_at_gmail_dot_com>

pkgname=aspell-el
pkgver=0.08
pkgrel=1
pkgdesc="Greek dictionary for aspell"
arch=('i686' 'x86_64')
url="http://elspell.math.upatras.gr/"
license=('GPL')
optdepends=('aspell:	the spell checking libraries and apps')
source=("${url}files/aspell/aspell6-el-$pkgver-0.tar.bz2")
md5sums=('cf0e677c37ffb64e4b8ebe13acd233c7')

build() {
  cd $srcdir/aspell6-el-$pkgver-0
  ./configure
  make
}

package() {
  cd $srcdir/aspell6-el-$pkgver-0
  make DESTDIR="$pkgdir" install
}
